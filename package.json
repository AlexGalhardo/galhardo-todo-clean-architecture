{
	"name": "boilerplate-trpc",
	"version": "1.0.0",
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"scripts": {
		"start": "npm run build && node dist/server.js",
		"nodemon": "npx nodemon dist/server.js",
		"pm2": "npx pm2 start dist/server.js --name galhardo-app-api --interpreter node --watch",
		"dev": "concurrently \"npm run watch:compile\" \"node ./dist/server.js\"",
		"watch:compile": "npm run delete:build && swc src -w --out-dir dist",
		"watch:dev": "npx nodemon ./dist/server.js",
		"build": "npm run delete:build && swc src -d dist",
		"vitest": "vitest",
		"vitest:coverage": "vitest run --coverage",
		"fix:prettier": "npx prettier --write src/*.ts src/**/*.ts src/**/**/*.ts src/**/**/**/*.ts tests/**/*.ts",
		"fix:lint": "npx eslint . --fix",
		"precommit": "rm -rf dist/ && npm run fix:prettier && npm run fix:lint",
		"delete:build": "rm -rf dist",
		"postinstall": "npx prisma generate",
		"trunk:fmt": "trunk fmt --all",
		"trunk:check": "trunk check --all"
	},
	"dependencies": {
		"@faker-js/faker": "^7.6.0",
		"@prisma/client": "^4.10.1",
		"@trpc/client": "^10.11.0",
		"@trpc/server": "^10.11.0",
		"axios": "^1.3.2",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"helmet": "^6.0.1",
		"jsonwebtoken": "^9.0.0",
		"pg": "^8.9.0",
		"pg-hstore": "^2.3.4",
		"query-string": "^8.1.0",
		"rand-token": "^1.0.1",
		"uuid": "^9.0.0",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.61",
		"@swc/core": "^1.3.35",
		"@trunkio/launcher": "^1.2.3",
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.13.0",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.0",
		"c8": "^7.12.0",
		"concurrently": "^7.6.0",
		"install": "^0.13.0",
		"nodemon": "^2.0.20",
		"npm": "^9.4.2",
		"prisma": "^4.10.1",
		"superagent": "^8.0.9",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.9.5",
		"vitest": "^0.28.4"
	}
}
