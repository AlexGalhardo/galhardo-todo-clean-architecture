{
  "name": "todo-api-clean-architecture.alexgalhardo.com",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "bun build --compile --minify ./src/server.ts --outfile server",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npx husky install",
    "test": "bun test",
    "test:watch": "bun --watch test"
  },
  "prisma": {
    "seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "^5.14.0",
    "bcrypt": "^5.1.1",
    "fastify": "^4.27.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.1.3",
    "@types/jsonwebtoken": "^9.0.6",
    "bun-types": "latest",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
